    <script>
        function showTask(task) {
            document.querySelectorAll('.task-section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(task).classList.add('active');
            document.querySelectorAll('nav button').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`nav button[onclick="showTask('${task}')"]`).classList.add('active');
        }

        function previewImage(type) {
            const fileInput = document.getElementById(`${type}Upload`);
            const preview = document.getElementById(`${type}Preview`);
            const file = fileInput.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        }

        function runInspection(type) {
            const fileInput = document.getElementById(`${type}Upload`);
            const resultText = document.getElementById(`${type}Result`);
            const preview = document.getElementById(`${type}Preview`);
            const file = fileInput.files[0];

            if (!file) {
                resultText.textContent = "Please upload an image first.";
                return;
            }

            const formData = new FormData();
            formData.append('image', file);
            formData.append('task_type', type);

            fetch('http://localhost:5000/inspect', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) throw new Error('Network response was not ok');
                return response.json();
            })
            .then(data => {
                if (type === 'object' && data.annotated_image) {
                    preview.src = data.annotated_image;
                    preview.style.display = 'block';
                    resultText.textContent = data.detections.map(d => `${d.label}: ${d.score}`).join(', ');
                } else {
                    resultText.textContent = data.label || data.result || data.text || data.error;
                    preview.style.display = 'block';
                }
            })
            .catch(error => {
                resultText.textContent = "Error: Could not connect to server or process image.";
                console.error(error);
            });
        }
    </script>
